@model UserManagement.Models.Device

@{
    ViewData["Title"] = "Edit";
}

@using Microsoft.AspNetCore.Identity
@using UserManagement.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Device</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="DeviceId" />
        <div class="form-group">
            <label asp-for="DeviceName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DeviceName" class="form-control" />
                <span asp-validation-for="DeviceName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SensorType" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="SensorType" class="form-control"></select>
                <span asp-validation-for="SensorType" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
}
else
{
    <!-- /.panel -->
    <div id="page-wrapper">
        <h2>Bitte Registrieren!</h2>
        <div class="panel-body">
            <a asp-area="" asp-controller="Account" asp-action="Register">Register</a> |
            <a asp-area="" asp-controller="Account" asp-action="Login">Log in</a>



        </div>
    </div>
        <!-- /.panel-body -->
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
